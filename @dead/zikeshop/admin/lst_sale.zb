* for sales:
    * head:
        <table border="1">
        <tr><th>ID</th>
            <th>Date</th>
            <th align="left">customer</th>
            <th>subtotal</th>
            <th>total</th></tr>
    <tr><td><a href="index.py?action=show&what=sale&ID={:ID:}">{:ID:}</a></td>
